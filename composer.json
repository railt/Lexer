{
    "name": "railt/lexer",
    "license": "MIT",
    "type": "library",
    "homepage": "http://railt.org",
    "description": "Fast implementation of the stateful and stateless lexers",
    "keywords": [
        "lexer",
        "language",
        "php"
    ],
    "authors": [
        {
            "name": "Kirill Nesmeyanov",
            "email": "nesk@xakep.ru"
        }
    ],
    "support": {
        "issues": "https://github.com/railt/railt/issues",
        "source": "https://github.com/railt/lexer"
    },
    "require": {
        "php": "^7.1.3",
        "ext-spl": "*",
        "ext-pcre": "*",
        "ext-mbstring": "*",
        "railt/io": "~1.3.0|1.3.x-dev"
    },
    "autoload": {
        "psr-4": {
            "Railt\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^6.5"
    },
    "autoload-dev": {
        "psr-4": {
            "Railt\\Tests\\Lexer\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "prefer-stable": true,
    "minimum-stability": "dev"
}
